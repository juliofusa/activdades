        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/Color_amarillo_reg" />

                    <stroke android:width="2dp" android:color="#3b83bd" />

                    <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />

